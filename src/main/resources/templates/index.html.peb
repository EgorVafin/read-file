    {% extends "layout/user" %}

        {% block title %}
        –ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞
        {% endblock %}

    {% block content %}

    <h3>–ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞</h3>
    <br>

    <a href="/document/add" class="btn btn-secondary">–†–∞—Å–ø–∞—Ä—Å–∏—Ç—å URL</a>
    <div><br></div>

    <section class="list">

        <div class="container-sm">
            <div class="row">

                <table class="table table-sm table-success table-hover table-striped">
                    <caption-top>–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ —Å–ª–æ–≤ –ø–æ –≤—Å–µ–º –¥–æ–∫—É–º–µ–Ω—Ç–∞–º:</caption-top>
                    <thead class="table-dark">
                    <tr>
                        <th bgcolor="silver">–°–ª–æ–≤–æ</th>
                        <th bgcolor="silver">–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ</th>
                    </tr>
                    </thead>
                    {% for word in words %}
                        <tr>
                            <td>{{ word.word }}</td>
                            <td>{{ word.count }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>

        <div class="container-xl">
            <div class="row">

                <div>
                    <label for="filter_name">–ù–∞–∑–≤–∞–Ω–∏–µ:</label>
                    <input type="text" name="filter_name" id="filter_name"
                           value="{{ documentFilter.filter_name }}"/>
                </div>

            </div>
            <div style="margin-top: 10px; margin-bottom: 10px;">
                <button type="submit" class="btn btn-secondary">–ü–æ–∏—Å–∫</button>
                <a href="/" class="btn btn-secondary">–°–±—Ä–æ—Å–∏—Ç—å</a>
            </div>
        </div>





                <table class="table table-sm table-success table-hover table-striped">
                    <caption-top>–°–ø–∏—Å–æ–∫ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤:</caption-top>
                    <thead class="table-dark">
                    <tr>
                        <th bgcolor="silver">–ò–º—è</th>
                        <th bgcolor="silver">URL</th>
                        <th bgcolor="silver">–¢–µ–∫—Å—Ç</th>
                        <th bgcolor="silver">–î–∞—Ç–∞</th>
                    </tr>
                    </thead>
                    {% for document in documents %}
                        <tr>
                            <td><a href="document\{{ document.id }}">{{ document.name }}</a></td>
                            <td>{{ document.url }}</td>
                            <td>{{ document.text }}</td>
                            <td>{{ document.scrapedAt }}</td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6">
                <nav style="float: left">
                    <ul class="pagination">


                        <li class="page-item">
                                {%if documents.getNumber() != 0 %}
                                <a class="page-link"
                                   href="/?offset={{ documents.getNumber() - 1 }}&limit={{ documents.getSize() }}">ü°∞</a>
                                {%else%}
                                <a class="page-link">ü°∞</a>
                                {%endif%}
                        </li>

                        <li class="page-item">
                                {%if (documents.getNumber() + 1) !=  documents.getTotalPages()%}
                                <a class="page-link"
                                   href="/?offset={{ documents.getNumber() + 1 }}&limit={{ documents.getSize() }}">ü°≤</a>
                                {%else%}
                                <a class="page-link">ü°≤</a>
                                {%endif%}
                        </li>

                    </ul>
                </nav>
            </div>

            <div class="col-md-6">
                <div style="float: right">
                    –°—Ç—Ä–∞–Ω–∏—Ü–∞ {{ documents.getNumber() + 1 }} / {{ documents.getTotalPages() }}
                    <script>
                        function onSelectPages(value) {
                            const url = new URL(window.location.href);
                            const urlParams = url.searchParams;
                            urlParams.set('offset', '0');
                            urlParams.set('limit', value);
                            const newUrl = url.toString();
                            console.log(newUrl);

                            window.location.href = newUrl;

                        }
                    </script>
                    <select class="form-select" id="rowsPerPages"
                            onchange="onSelectPages(this.options[this.selectedIndex].value)">
                            {%for rows in rowsPerPage%}
                            <option {%if rows == (documents.getSize()) %} selected {%endif%}
                                                                       value="{{ rows }}">{{rows}}</option>
                            {%endfor%}
                    </select>

                </div>
            </div>
        </div>

    </section>



    {% endblock %}