    {% block content %}

    <h6 class="display-6">–ì–ª–∞–≤–Ω–∞—è —Å—Ç—Ä–∞–Ω–∏—Ü–∞</h6>
    <br>
    <section class="list">

        <div class="container-sm">

            <table class="table table-sm table-success table-hover table-striped">
                <caption-top>–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ —Å–ª–æ–≤ –ø–æ –≤—Å–µ–º –¥–æ–∫—É–º–µ–Ω—Ç–∞–º:</caption-top>
                <thead class="table-dark">
                <tr>
                    <th bgcolor="silver">#</th>
                    <th bgcolor="silver">–°–ª–æ–≤–æ</th>
                    <th bgcolor="silver">–ö–æ–ª–∏—á–µ—Å—Ç–≤–æ</th>
                    <th bgcolor="silver">–ö–æ–ª-–≤–æ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤</th>
                </tr>
                </thead>
                {% for word in words %}
                    <tr>
                        <td>{{ (words.getNumber() * words.getSize()) + loop.index + 1 }}</td>
                        <td>{{ word.word }}</td>
                        <td>{{ word.frequency }}</td>
                        <td>{{ word.docCount }}</td>
                    </tr>
                {% endfor %}
            </table>


            <div class="container">
                <div class="row">
                    <div class="col-8">
                        <nav style="float: left">
                            <ul class="pagination">
                                <li class="page-item">
                                        {%if words.getNumber() != 0 %}
                                        <a class="page-link"
                                           href="/?page={{ words.getNumber() }}">ü°∞</a>
                                        {%endif%}
                                </li>
                                <li class="page-item">
                                        {%if (words.getNumber() + 1) !=  words.getTotalPages()%}
                                        <a class="page-link"
                                           href="/?page={{ words.getNumber() + 2 }}">ü°≤</a>
                                        {%endif%}
                                </li>
                            </ul>
                        </nav>
                    </div>

                    <div class="col-4">
                        <div style="float: right">
                            –°—Ç—Ä–∞–Ω–∏—Ü–∞ {{ words.getNumber() + 1 }} / {{ words.getTotalPages() }}
                        </div>
                    </div>

                </div>
            </div>


            <form method="get">
                <div class="row mb-3">
                    <label for="filter_word" class="col-sm-1 col-form-label">–ù–∞–∑–≤–∞–Ω–∏–µ</label>
                    <div class="col-sm-3">
